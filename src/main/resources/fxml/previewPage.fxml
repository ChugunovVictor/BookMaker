<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.CheckBox?>
<GridPane vgap="5" xmlns:fx="http://www.w3.org/2001/XInclude" fx:controller="org.chugunov.ui.controllers.PreviewController">
    <children>
        <Label text="Blocks On Page" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Spinner fx:id="numberOfBlocksOnPageField" min="1" max="100" GridPane.rowIndex="0"
                 GridPane.columnIndex="1"/>

        <Label text="Debug" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <CheckBox fx:id="debugField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label fx:id="debugDepthLabel" text="Debug Depth" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Spinner fx:id="debugDepthField" min="1" max="10" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button fx:id="btn" text="Proceed" onAction="#proceed" GridPane.rowIndex="3"
                GridPane.columnIndex="1"></Button>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="25.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="75.0"/>
    </columnConstraints>
</GridPane>
